<div id="<%= dom_id todo %>">
  <p>
    <strong>Name:</strong>
    <%= @todo.name %>
  </p>

  <p>
    <strong>Start:</strong>
    <%= @todo.start %>
  </p>

  <p>
    <strong>End:</strong>
    <%= @todo.end %>
  </p>

  <p>
    <strong>Progress:</strong>
    <%= @todo.progress %>
  </p>

  <div>
    <%= link_to "Edit", edit_todo_path(@todo) %> |
    <%= link_to "Back", todos_path %>
  </div>

</div>
