<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :start, class: 'form-label' %>
    <%= form.date_field :start, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :end, class: 'form-label' %>
    <%= form.date_field :end, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :progress, class: 'form-label' %>
    <%= form.number_field :progress, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Create/Update Todo', class: 'btn btn-primary' %>
  </div>
<% end %>
