<%= turbo_frame_tag todo do %>
  <%= form_with(model: todo, data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <%= form.label :name, class: 'form-label'%>
    <%= form.text_field :name, class: 'form-control' %>
    <%= form.label :start, class: 'form-label' %>
    <%= form.date_field :start, class: 'form-control' %>
    <%= form.label :end, class: 'form-label' %>
    <%= form.date_field :end, class: 'form-control' %>
    <%= form.label :progress, class: 'form-label' %>
    <%= form.number_field :progress, class: 'form-control' %>

    <%= form.check_box :complete, class: 'form-check-input' %>
    <label for="todo_complete" class="form-check-label">Complete?</label>

    <div class="d-flex justify-content-end">
      <%= form.submit caption, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

